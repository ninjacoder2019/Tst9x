<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreezeMars"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewFreezeMars"
        android:layout_width="371dp"
        android:layout_height="191dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marstray" />

    <ImageView
        android:id="@+id/imageViewNuts"
        android:layout_width="96dp"
        android:layout_height="60dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toTopOf="@+id/imageViewFreezeMars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nuts" />

    <ImageView
        android:id="@+id/imageViewButter"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toTopOf="@+id/imageViewFreezeMars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/butter" />

    <ImageView
        android:id="@+id/imageViewCoconut"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toTopOf="@+id/imageViewFreezeMars"
        app:layout_constraintEnd_toStartOf="@+id/imageViewButter"
        app:layout_constraintStart_toEndOf="@+id/imageViewNuts"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coconut" />
</androidx.constraintlayout.widget.ConstraintLayout>