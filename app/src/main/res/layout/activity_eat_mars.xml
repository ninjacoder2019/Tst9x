<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EatMars"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="59dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/candyhome" />

    <ImageView
        android:id="@+id/imageViewMars1"
        android:layout_width="355dp"
        android:layout_height="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHome"
        app:srcCompat="@drawable/mars" />

    <ImageView
        android:id="@+id/imageViewMars2"
        android:layout_width="365dp"
        android:layout_height="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMars1"
        app:srcCompat="@drawable/mars" />

    <ImageView
        android:id="@+id/imageViewMars3"
        android:layout_width="359dp"
        android:layout_height="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMars2"
        app:srcCompat="@drawable/mars" />

    <ImageView
        android:id="@+id/imageViewRetry"
        android:layout_width="108dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMars3"
        app:srcCompat="@drawable/retry" />

</androidx.constraintlayout.widget.ConstraintLayout>